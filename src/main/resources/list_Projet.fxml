<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.ProjetListController"
      spacing="20" style="-fx-background-color: #F7FAFC; -fx-padding: 30;">

    <!-- En-tÃªte avec titre -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <VBox>
            <Label text="Gestion des Projets"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2D3748;"/>
            <Label text="GÃ©rez votre liste de projets de maniÃ¨re efficace"
                   style="-fx-font-size: 14px; -fx-text-fill: #718096; -fx-padding: 5 0 0 0;"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Bouton Ajouter -->
        <Button text="+ Ajouter un projet"
                style="-fx-background-color: #4A6FA5; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-padding: 12 24; -fx-font-size: 14px;"
                onAction="#handleAddNew"/>
    </HBox>

    <!-- Ligne de sÃ©paration -->
    <Separator style="-fx-background-color: #E2E8F0;"/>

    <!-- Barre de recherche et filtres -->
    <VBox spacing="15">
        <!-- PremiÃ¨re ligne : recherche et filtres -->
        <HBox spacing="20" alignment="CENTER_LEFT">
            <!-- Barre de recherche -->
            <TextField fx:id="searchField"
                       style="-fx-background-color: #F8FAFC; -fx-border-color: #CBD5E0;
                              -fx-border-radius: 8; -fx-background-radius: 8;
                              -fx-padding: 10 15; -fx-font-size: 14px; -fx-pref-width: 350px;"
                       promptText="Rechercher un projet par nom, description ou ID..."/>

            <!-- Filtre par statut -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Filtrer par statut :"
                       style="-fx-font-size: 14px; -fx-text-fill: #4A5568; -fx-font-weight: bold;"/>
                <ComboBox fx:id="statutFilterComboBox"
                          style="-fx-background-color: #F8FAFC; -fx-border-color: #CBD5E0;
                                 -fx-border-radius: 8; -fx-background-radius: 8;
                                 -fx-padding: 5 10; -fx-font-size: 14px; -fx-pref-width: 150px;"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Boutons d'action rapide -->
            <HBox spacing="10">
                <Button text="Effacer"
                        style="-fx-background-color: #CBD5E0; -fx-text-fill: #4A5568;
                               -fx-background-radius: 6; -fx-padding: 8 16; -fx-font-weight: bold;"
                        onAction="#handleClearSearch"/>
                <Button text="RafraÃ®chir"
                        style="-fx-background-color: #48BB78; -fx-text-fill: white;
                               -fx-background-radius: 6; -fx-padding: 8 16; -fx-font-weight: bold;"
                        onAction="#handleRefresh"/>
            </HBox>
        </HBox>
    </VBox>

    <!-- Statistiques -->
    <HBox spacing="40" alignment="CENTER_LEFT"
          style="-fx-background-color: #FFFFFF; -fx-border-color: #E2E8F0; -fx-border-radius: 12;
                 -fx-background-radius: 12; -fx-padding: 20;">

        <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Total projets"
                   style="-fx-font-size: 14px; -fx-text-fill: #718096; -fx-font-weight: bold;"/>
            <Label fx:id="totalProjetsLabel" text="0"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2D3748;"/>
        </VBox>

        <Separator orientation="VERTICAL" style="-fx-background-color: #E2E8F0;"/>

        <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
            <Label text="RÃ©sultats actuels"
                   style="-fx-font-size: 14px; -fx-text-fill: #718096; -fx-font-weight: bold;"/>
            <Label fx:id="activeSearchLabel" text="0"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2D3748;"/>
        </VBox>

        <Separator orientation="VERTICAL" style="-fx-background-color: #E2E8F0;"/>

        <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Dernier projet"
                   style="-fx-font-size: 14px; -fx-text-fill: #718096; -fx-font-weight: bold;"/>
            <Label fx:id="lastCreationLabel" text="N/A"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2D3748;"/>
        </VBox>
    </HBox>

    <!-- Liste des projets -->
    <VBox spacing="20" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="ðŸ“‹ Liste des Projets"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4A5568;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ“Š Statistiques"
                    style="-fx-background-color: #805AD5; -fx-text-fill: white;
                           -fx-background-radius: 6; -fx-padding: 8 16; -fx-font-weight: bold;"
                    onAction="#handleShowStatistics"/>
        </HBox>

        <ScrollPane fitToWidth="true"
                    style="-fx-background-color: transparent; -fx-border-color: transparent;
                           -fx-background: transparent;"
                    vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
            <ListView fx:id="projetListView"
                      style="-fx-background-color: transparent;"
                      VBox.vgrow="ALWAYS"/>
        </ScrollPane>

        <!-- Pied de page -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="ðŸ“¤ Exporter la liste"
                    style="-fx-background-color: #EDF2F7; -fx-text-fill: #4A5568;
                           -fx-background-radius: 6; -fx-padding: 8 16; -fx-font-weight: bold;"
                    onAction="#handleExport"/>
            <Label text="Â© 2024 Gestion de Projets"
                   style="-fx-font-size: 12px; -fx-text-fill: #A0AEC0;"/>
        </HBox>
    </VBox>

    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>
</VBox>